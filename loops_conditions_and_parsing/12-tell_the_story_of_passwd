#!/usr/bin/env bash
# File: 12-tell_the_story_of_passwd

counter=0
while IFS=: read -r username password userid groupid info home shell
do
    # Set default/dummy values
    [[ -z "$info" ]] && info="$username"
    [[ -z "$shell" ]] && shell="/usr/sbin/nologin"
    [[ -z "$password" ]] && password="x"

    echo "The user $username is part of the $groupid gang, lives in $home and rides $shell. $counter's place is protected by the passcode $password, more info about the user here: $info"

    ((counter++))
done < /etc/passwd

