#!/usr/bin/env bash
# This script writes its PID to a file, prints messages, and handles signals

PIDFILE="/var/run/myscript.pid"

# Write PID to file
echo $$ > "$PIDFILE"

# Trap signals
trap 'echo "OK"' SIGTERM        # Corrected output for SIGTERM
trap 'echo "Y U no love me?!"' SIGINT
trap 'rm -f "$PIDFILE"; exit' SIGQUIT SIGTERM

# Infinite loop
while true
do
    echo "To infinity and beyond"
    sleep 2
done
